{% extends 'layout.njk' %}
{% block  content %}
    <main>
        {% include 'components/meepsform.njk' %}
        <ul>
            {% for meep in meeps %}
                <li>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <p class="card-text">{{ meep.body }}</p>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% endblock %}
</main>